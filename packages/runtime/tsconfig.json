{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@rill/runtime": ["./src/runtime/index.ts"],
      "@rill/runtime/types": ["./src/types.ts"],
      "@rill/runtime/devtools": ["./src/devtools/index.ts"],
      "@rill/sandbox": ["../sandbox/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/__tests__/**",
    "src/components",
    "src/runtime/EngineView.tsx"
  ],
  "references": [{ "path": "../sandbox" }, { "path": "../let" }, { "path": "../devtools" }]
}
