{
  "name": "@rill/core",
  "version": "0.1.0",
  "type": "module",
  "description": "A lightweight, headless, sandboxed dynamic UI rendering engine for React Native",
  "author": "kookyleo <kookyleo@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kookyleo/rill.git"
  },
  "keywords": [
    "react-native",
    "dynamic-ui",
    "sandbox",
    "quickjs",
    "javascriptcore",
    "jsc",
    "mini-program"
  ],
  "main": "./src/runtime/index.ts",
  "types": "./src/runtime/index.ts",
  "exports": {
    ".": "./src/runtime/index.ts",
    "./sdk": "./src/sdk/index.ts",
    "./types": "./src/types.ts",
    "./devtools": "./src/devtools/index.ts"
  },
  "sideEffects": false,
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:coverage:check": "node scripts/check-coverage.cjs",
    "bench": "bun test --run ./src/__benchmarks__/*.bench.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit -p tsconfig.check.json"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@jitl/quickjs-wasmfile-release-sync": "^0.31.0",
    "@sebastianwessel/quickjs": "latest",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.14",
    "@types/react": "^19.0.0",
    "@types/react-reconciler": "^0.28.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.6",
    "react-reconciler": "0.31.0",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-reconciler": ">=0.29.0",
    "react-native-jsc-sandbox": "github:GoAskAway/react-native-jsc-sandbox",
    "react-native-quickjs": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-jsc-sandbox": {
      "optional": true
    },
    "react-native-quickjs": {
      "optional": true
    }
  }
}
