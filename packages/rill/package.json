{
  "name": "rill",
  "version": "0.1.0",
  "description": "A lightweight, headless, sandboxed dynamic UI rendering engine for React Native",
  "author": "kookyleo <kookyleo@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kookyleo/rill.git"
  },
  "keywords": [
    "react-native",
    "dynamic-ui",
    "sandbox",
    "quickjs",
    "mini-program"
  ],
  "main": "./dist/runtime/index.js",
  "types": "./dist/runtime/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.mjs",
      "require": "./dist/runtime/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.mjs",
      "require": "./dist/sdk/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench --run",
    "bench:engine": "vitest bench --run src/__benchmarks__/engine.bench.ts",
    "bench:receiver": "vitest bench --run src/__benchmarks__/receiver.bench.ts",
    "bench:operations": "vitest bench --run src/__benchmarks__/operations.bench.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit -p tsconfig.check.json",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-reconciler": "^0.32.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "jsdom": "^27.2.0",
    "react": "^19.2.0",
    "react-native": "^0.82.1",
    "react-reconciler": "^0.31.0",
    "react-test-renderer": "^19.2.0",
    "typescript": "^5.3.0",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20",
    "react-native": ">=0.72.0",
    "react-native-quickjs": ">=0.1.0",
    "react-reconciler": ">=0.29 <0.34"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    },
    "react-native-quickjs": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "engineStrict": true
}
