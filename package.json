{
  "name": "rill",
  "version": "0.1.0",
  "repository": "https://github.com/GoAskAway/rill.git",
  "main": "./src/host/index.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@happy-dom/global-registrator": "^15.0.0",
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "@types/react": "19.0.0",
    "@types/react-reconciler": "^0.32.3",
    "@types/react-test-renderer": "^18.3.0",
    "@vitest/browser-webdriverio": "4.0.16",
    "commander": "^14.0.2",
    "oxc-parser": "^0.26.0",
    "react": "19.0.0",
    "react-reconciler": "0.31.0",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.16",
    "webdriverio": "^8.36.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-native-web": ">=0.19.0"
  },
  "exports": {
    ".": "./src/host/index.ts",
    "./let": "./src/guest/let/index.ts",
    "./host/preset": "./src/host/preset/index.ts",
    "./sandbox": "./src/sandbox/index.ts",
    "./sandbox/native": "./src/sandbox/native/index.ts",
    "./sandbox/web": "./src/sandbox/web/index.ts",
    "./devtools": "./src/devtools/index.ts",
    "./cli": "./src/cli/index.ts"
  },
  "description": "A lightweight, headless, sandboxed dynamic UI rendering engine for React Native",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "src",
    "native",
    "react-native.config.js",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/GoAskAway/rill",
  "license": "Apache-2.0",
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "scripts": {
    "test": "bun test",
    "test:native": "bash native/quickjs/run-tests.sh && bash native/jsc/run-tests.sh",
    "test:e2e": "bun tests/e2e-sandbox-web/run.ts",
    "test:e2e:wasm": "bun tests/e2e-wasm-sandbox/run.ts",
    "test:e2e:rn": "bash tests/rn-macos-e2e/run-tests.sh all",
    "test:all": "bash scripts/run-all-tests.sh --with-rn",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "bun tsc --noEmit",
    "check:unknown": "bun scripts/check-unknown.ts",
    "precommit": "bun check:unknown && bun typecheck && bun lint && bun test"
  },
  "types": "./src/host/index.ts"
}
