{
  "name": "rill",
  "version": "0.1.0",
  "description": "A lightweight, headless, sandboxed dynamic UI rendering engine for React Native",
  "homepage": "https://github.com/GoAskAway/rill",
  "repository": "https://github.com/GoAskAway/rill.git",
  "license": "Apache-2.0",
  "main": "./src/runtime/index.ts",
  "types": "./src/runtime/index.ts",
  "exports": {
    ".": "./src/runtime/index.ts",
    "./let": "./src/let/index.ts",
    "./devtools": "./src/devtools/index.ts",
    "./sandbox": "./src/sandbox/index.ts",
    "./sandbox-native": "./src/sandbox-native/index.ts",
    "./sandbox-web": "./src/sandbox-web/index.ts",
    "./cli": "./src/cli/index.ts"
  },
  "files": [
    "src",
    "native",
    "react-native.config.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "test:e2e": "bun tests/e2e-sandbox-web/run.ts",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:ci": "biome ci ."
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@happy-dom/global-registrator": "^15.0.0",
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "@types/react-reconciler": "^0.32.3",
    "@types/react-test-renderer": "^18.3.0",
    "oxc-parser": "^0.26.0",
    "react": "^19.0.0",
    "react-reconciler": "^0.33.0",
    "react-test-renderer": "^19.0.0",
    "vitest": "4.0.16",
    "@vitest/browser-webdriverio": "4.0.16",
    "webdriverio": "^8.36.1"
  }
}
